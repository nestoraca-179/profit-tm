
@{
    ViewBag.Title = "AgregarConexion";
}
<style>
    body > .container-fluid > main {
        overflow-y: auto;
    }
    .box {
        height: 100%;
        display: flex;
        flex-direction: column;
    }
    .container-title {
        flex: 1;
        height: 15%;
        padding: 0 5%;
        display: flex;
        align-items: center;
    }
    .container-title h2{
        margin: 0;
    }
    .alert{
        width: 90%;
        height: auto;
        max-height: 10%;
        margin: 0 auto;
        font-size: 12px;
    }
    form {
        width: 50%;
        height: 75%;
        margin: 0 auto;
        padding: 10px 0;
        display: flex;
        flex-direction: column;
        justify-content: space-evenly;
    }
    form .input-main {
        /*width: 320px;*/
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    form .input-main i {
        color: #FFF;
        font-size: 30px;
    }
    form .input-main .form-control {
        /*max-width: 250px;*/
        background: none;
        border: 0;
        border-bottom: solid 1px #FFF;
        border-radius: 0;
        color: #FFF;
        margin-left: 40px;
    }
    form .input-main .form-control::placeholder{
        color: #FFF;
    }
    form button{
        padding: 20px 0 !important;
    }
</style>
<div class="box">
    <div class="container-title">
        <h2 class="text-white">Agregar Conexión</h2>
    </div>
    @{
        if (!string.IsNullOrEmpty(ViewBag.message))
        {
            <div class="alert alert-warning">@ViewBag.message</div>
        }
    }
    <form action="/Home/GuardarConexion" method="post">
        <div class="input-main">
            <i class="fas fa-file"></i>
            <input type="text" id="name" name="name" class="form-control" placeholder="Nombre de la conexión" required />
        </div>
        <div class="input-main">
            <i class="fas fa-server"></i>
            <input type="text" id="server" name="server" class="form-control" placeholder="Servidor" required />
        </div>
        <div class="input-main">
            <i class="fas fa-database"></i>
            <input type="text" id="db" name="db" class="form-control" placeholder="Base de Datos" required />
        </div>
        <div class="input-main">
            <i class="fas fa-user"></i>
            <input type="text" id="username" name="username" class="form-control" placeholder="Usuario" required />
        </div>
        <div class="input-main">
            <i class="fas fa-lock"></i>
            <input type="password" id="password" name="password" class="form-control" placeholder="Clave" required />
        </div>
        <input type="hidden" name="prod" value="@ViewBag.prod" />
        <button class="btn btn-primary mt-5">Guardar Conexión</button>
    </form>
</div>