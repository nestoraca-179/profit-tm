                                <input type="hidden" id="dateFacturaAdd" value="" ng-model="formAdd.DateEmis" />
                                <input type="hidden" id="userInFacturaAdd" value="" ng-model="formAdd.UserIn" />
                                <input type="hidden" id="branchInFacturaAdd" value="" ng-model="formAdd.BranchIn" />
                            </div>
                            <div class="form-group row" style="margin-top: 10px">
                                <div class="col-sm-12">
                                    <label>Items</label>
