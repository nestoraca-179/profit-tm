                                </div>
                                <div class="col-sm-4">
                                    <input type="text" id="rifEdit" name="paramsProvEdit" placeholder="RIF" required />
                                </div>
                            </div>
                            <div class="form-group row" style="margin-top: 30px">
                                <div class="col-sm-6">
                                    <input type="email" id="emailEdit" name="paramsProvEdit" placeholder="Email" />
                                </div>
                                <div class="col-sm-6">
                                    <input type="text" id="telefonoEdit" name="paramsProvEdit" placeholder="Teléfono" />
                                </div>
                            </div>
                            <div class="form-group row" style="margin-top: 30px">
                                <div class="col-sm-12">
                                    @*<input type="text" id="direccionEdit" name="paramsProvEdit" placeholder="Direccion" />*@
