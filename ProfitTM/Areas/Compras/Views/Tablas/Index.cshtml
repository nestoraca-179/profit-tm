@{
    ViewData["Title"] = "Tablas";
    ViewData["home"] = Session["home"];
}
<div class="container container-option">
    @{
        if (!string.IsNullOrEmpty(ViewBag.message))
        {
            <div style="width: 100%;" class="@ViewBag.classAlert">@ViewBag.message</div>
        }
    }
    <form action="" method="post">
        <div class="form-row">
            <div class="form-group col-sm-2">
                <label for="option" style="margin: 0;">Seleccionar opción</label>
            </div>
            <div class="form-group col-sm-8">
                <select id="option" name="option" onchange="change(this)">
                    <option value="#">Seleccione una opción...</option>
                    <option value="0">Proveedor</option>
                    <option value="1">Tipo</option>
                    <option value="2">Zona</option>
                    <option value="3">Segmento</option>
                    <option value="4">Condición Pago</option>
                    <option value="5">Cuenta de I/E</option>
                </select>
            </div>
            <div class="form-group col-sm-2">
                <button type="submit" id="btn" class="btn btn-primary" disabled>Cargar opción</button>
            </div>
        </div>
    </form>
    <hr />
    @{
        if (ViewBag.results != "")
        {
            <div>
                <button type="button" class="btn btn-success" data-toggle="modal" data-target="#modalProveedorAdd">
                    <i class="fas fa-plus"></i> Agregar nuevo
                </button>
            </div>
            <h2 class="text-center">@ViewBag.titleR</h2>
            <table id="results-table" class="table table-striped table-hover table-bordered table-sm shadow-sm">
                <thead class="thead-dark">
                    <tr>
                        @{
                            foreach (string header in ViewBag.headers.Split(','))
                            {
                                <th style="vertical-align: middle; text-align: center;" scope="col">@header</th>
                            }
                            <th scope="col">Opciones</th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach (var result in ViewBag.resultsTable)
                        {
                            <tr>
                                @{
                                    foreach (string col in ViewBag.cols.Split(','))
                                    {
                                        <td> @result[col]</td>
                                    }
                                    <td class="cell-icons" scope="col">
                                        <div>
                                            <i role="button" onclick="editRow(this)" class="fas fa-file-edit"></i>
                                            <i role="button" onclick="deleteRow(this)" class="fas fa-times"></i>
                                        </div>
                                    </td>
                                }
                            </tr>
                        }
                    }
                </tbody>
            </table>
            <div style="height: 40px;"></div>
            <!-- Modal Agregar Proveedor -->
            <div class="modal fade" id="modalProveedorAdd" tabindex="-1" role="dialog" aria-hidden="true">
                <div class="modal-dialog" role="document" style="max-width: 800px;">
                    <form action="" method="post" class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Agregar Proveedor</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div class="form-group row">
                                <div class="col-sm-2">
                                    <input type="text" id="codigo" name="paramsProvAdd" placeholder="Código" required />
                                </div>
                                <div class="col-sm-6">
                                    <input type="text" id="nombre" name="paramsProvAdd" placeholder="Nombre" required />
                                </div>
                                <div class="col-sm-4 input-search">
                                    <input type="text" id="tipo" name="paramsProvAdd" placeholder="Tipo" onfocus="this.blur()" style="max-width: 70%;" required />
                                    <i class="fas fa-search" role="button" onclick="openModal(this, 'modalAssistType')" data-name="tipo"></i>
                                </div>
                            </div>
                            <div class="form-group row" style="margin-top: 30px">
                                <div class="col-sm-6">
                                    <input type="text" id="rif" name="paramsProvAdd" placeholder="RIF" required />
                                </div>
                                <div class="col-sm-6">
                                    <input type="text" id="nit" name="paramsProvAdd" placeholder="NIT" />
                                </div>
                            </div>
                            <div class="form-group row" style="margin-top: 30px">
                                <div class="col-sm-3 input-search">
                                    <input type="text" id="zona" name="paramsProvAdd" placeholder="Zona" onfocus="this.blur()" style="max-width: 70%;" required />
                                    <i class="fas fa-search" role="button" onclick="openModal(this, 'modalAssistZone')" data-name="zona"></i>
                                </div>
                                <div class="col-sm-3 input-search">
                                    <input type="text" id="cuenta" name="paramsProvAdd" placeholder="Cta Ingr/Egr" onfocus="this.blur()" style="max-width: 70%;" required />
                                    <i class="fas fa-search" role="button" onclick="openModal(this, 'modalAssistAccount')" data-name="cuenta"></i>
                                </div>
                                <div class="col-sm-3 input-search">
                                    <input type="text" id="pais" name="paramsProvAdd" placeholder="País" onfocus="this.blur()" style="max-width: 70%;" required />
                                    <i class="fas fa-search" role="button" onclick="openModal(this, 'modalAssistCountry')" data-name="pais"></i>
                                </div>
                                <div class="col-sm-3 input-search">
                                    <input type="text" id="segmento" name="paramsProvAdd" placeholder="Segmento" onfocus="this.blur()" style="max-width: 70%;" required />
                                    <i class="fas fa-search" role="button" onclick="openModal(this, 'modalAssistSegment')" data-name="segmento"></i>
                                </div>
                            </div>
                            <div class="form-group row" style="margin-top: 30px">
                                <div class="col-sm-6">
                                    <input type="email" id="email" name="paramsProvAdd" placeholder="Email" />
                                </div>
                                <div class="col-sm-6">
                                    <input type="text" id="telefono" name="paramsProvAdd" placeholder="Teléfono" />
                                </div>
                            </div>
                            <div class="form-group row" style="margin-top: 30px">
                                <div class="col-sm-12">
                                    @*<input type="text" id="direccion" name="paramsProvAdd" placeholder="Direccion" />*@
                                    <textarea id="direccion" name="paramsProvAdd" placeholder="Direccion"></textarea>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                            <button type="submit" class="btn btn-primary">Guardar</button>
                        </div>
                    </form>
                </div>
            </div>
