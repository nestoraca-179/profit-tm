<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["TITLE"] - ProfitTM</title>
    <link rel="stylesheet" href="~/Content/bootstrap-5.2.css" />
    <link rel="stylesheet" href="~/Content/Site.css" />
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous" />
    <link rel="icon" type="image/png" href="~/icono.png" sizes="32x32">
    <script src="~/Scripts/jquery-3.6.0.min.js"></script>
    <script src="~/Scripts/highcharts.js"></script>
    <script src="~/Scripts/highcharts-3d.js"></script>
    <script src="~/Scripts/drilldown.js"></script>
    <script src="~/Scripts/module-exporting.js"></script>
    <script src="~/Scripts/module-exportdata.js"></script>
    <script src="~/Scripts/module-accesibility.js"></script>
</head>
<body>
    <header class="container-fluid">
        <div class="row">
            <div class="col-md-4 col-xl-3 col-xxl-2 header-left-side text-white" id="header-left">
                <i class="fas fa-bars icon-menu" id="icon-menu"></i>
                <a href="/Home/@ViewData["HOME"]">Profit Plus TM <br /> @{ if (!string.IsNullOrEmpty(ViewBag.product)) { <span>@ViewBag.product</span> } }</a>
            </div>
            <div class="col-md-8 col-xl-9 col-xxl-10 header-right-side">
                <div class="header-left-side-alt">
                    <a href="/Home/@ViewData["HOME"]">Profit Plus TM <br /> @{ if (!string.IsNullOrEmpty(ViewBag.product)) { <span>@ViewBag.product</span> } }</a>
                </div>
                <div class="user-active" role="button" id="drop-menu" onclick="$('#dropdown-menu').slideToggle();">
                    <i class="fas fa-user icon-user"></i>
                    <p class="mb-0">@ViewBag.user.Descrip</p>
                    <div class="dropdown-menu" id="dropdown-menu">
                        <a href="/Account/Logout">Cerrar Sesión</a>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <div class="container-fluid p-0">
        <main role="main">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted footer-bottom">
        <div class="container-fluid">
            <p>&copy; 2022 - <a href="http://gtsconsultingca.com/" target="_blank" style="margin-left: 5px; text-decoration: none;">Global Technology and Systems Consulting C.A.</a></p>
            @{
                if (ViewBag.data_conn != null)
                {
                    <ul class="list-connection">
                        <li style="margin: 0 10px;"><i class="fas fa-building"></i> Empresa: @ViewBag.data_conn</li>
                        @{ 
                            if (ViewBag.bran_conn != null)
                            {
                                <li><i class="fas fa-building"></i> Sucursal: @ViewBag.bran_conn</li>
                            }
                        }
                    </ul>
                }
            }
        </div>
    </footer>
    <script src="~/Scripts/popper.js"></script>
    <script src="~/Scripts/bootstrap-5.2.js"></script>
    <script>
        $(document).on("contextmenu", function (event) {
            event.preventDefault();
        });
    </script>
</body>
</html>